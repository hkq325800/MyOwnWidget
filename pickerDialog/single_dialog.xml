<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/mSingleDialogFirstTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text=":" />

    <NumberPicker
        android:id="@+id/mFirstPicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:focusable="false"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/mSingleDialogFirstTxt" />

    <NumberPicker
        android:id="@+id/mSecondPicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="10dp"
        android:clickable="false"
        android:layout_gravity="center"
        android:layout_toRightOf="@id/mSingleDialogFirstTxt" />

    <TextView
        android:id="@+id/mSingleDialogSecondTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/mSecondPicker"
        android:layout_centerVertical="true" />

</RelativeLayout>